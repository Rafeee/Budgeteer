<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity"
    android:fitsSystemWindows="true"
    android:id="@+id/drawer_layout"
    android:useDefaultMargins="true">

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"

            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:columnCount="3"
            android:rowCount="11">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon1"
        android:onClick="openCategory"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:tag="Apartment"
        android:layout_row="0"
        android:layout_column="0" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon2"
        android:onClick="openCategory"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:tag="Clothes"
        android:layout_row="0"
        android:layout_column="1" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon3"
        android:onClick="openCategory"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:tag="Phone"
        android:layout_row="0"
        android:layout_column="2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon4"
        android:onClick="openCategory"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:tag="Car"
        android:layout_row="1"
        android:layout_column="0" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon5"
        android:onClick="openCategory"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:tag="Transport"
        android:layout_row="1"
        android:layout_column="1" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon6"
        android:onClick="openCategory"
        android:minHeight="100dp"
        android:minWidth="100dp"
    android:tag="Food"
        android:layout_row="1"
        android:layout_column="2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon7"
        android:onClick="openCategory"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:tag="Sports"
        android:layout_row="2"
        android:layout_column="0" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon8"
        android:onClick="openCategory"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:tag="Health"
        android:layout_row="2"
        android:layout_column="1" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon9"
        android:onClick="openCategory"
        android:minHeight="100dp"
        android:minWidth="100dp"
    android:tag="Entertainment"
        android:layout_row="2"
        android:layout_column="2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon10"
        android:onClick="openCategory"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:tag="Pets"
        android:layout_row="3"
        android:layout_column="0" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon11"
        android:onClick="openCategory"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:tag="Apartment"
        android:layout_row="3"
        android:layout_column="1" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon12"
        android:onClick="openCategory"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:tag="Income"
        android:layout_row="3"
        android:layout_column="2" />

            <Button
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:text="Delete Entry"
                android:id="@+id/button4"
                android:layout_row="10"
                android:layout_column="0"
                android:onClick="openDeleteEntry" />

        </GridLayout>

    </FrameLayout>
    <!-- android:layout_gravity="start" tells DrawerLayout to treat
            this as a sliding drawer on the left side for left-to-right
            languages and on the right side for right-to-left languages.
            If you're not building against API 17 or higher, use
            android:layout_gravity="left" instead. -->
    <!-- The drawer is given a fixed width in dp and extends the full height of
         the container. -->

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#1a1c25"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

</android.support.v4.widget.DrawerLayout>