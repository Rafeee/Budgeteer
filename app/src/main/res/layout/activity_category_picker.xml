<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity"
    android:fitsSystemWindows="true"
    android:id="@+id/drawer_layout"
    android:useDefaultMargins="true">

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/category_picker_layout"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:id="@+id/relativeLayout">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ChooseCategoryTitle"
                    android:textStyle="bold"
                    android:textSize="32dp"
                    android:text="Choose a Category"
                    android:gravity="left" />

                </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"
                android:layout_below="@+id/relativeLayout"
                android:layout_alignParentStart="true" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="4"
                android:layout_gravity="left|top"
                android:id="@+id/tableLayout"
                android:layout_below="@+id/relativeLayout"
                android:layout_alignParentStart="true">

                    <TableRow android:gravity="center">


                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/icon1"
                        android:onClick="openCategory"
                        android:minHeight="100dp"
                        android:minWidth="100dp"
                        android:tag="Apartment"
                        android:cropToPadding="false"
                        android:longClickable="false"
                        android:layout_margin="3dp"
                        android:layout_gravity="top|center" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/icon2"
                        android:onClick="openCategory"
                        android:minHeight="100dp"
                        android:minWidth="100dp"
                        android:tag="Clothes"
                        android:layout_margin="3dp"
                        android:layout_gravity="top|center" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/icon3"
                        android:onClick="openCategory"
                        android:minHeight="100dp"
                        android:minWidth="100dp"
                        android:tag="Phone"
                        android:layout_margin="3dp"
                        android:layout_gravity="top|center" />

                    </TableRow>
                    <TableRow android:gravity="center">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/icon4"
                        android:onClick="openCategory"
                        android:minHeight="100dp"
                        android:minWidth="100dp"
                        android:tag="Car"
                        android:layout_margin="3dp"
                        android:layout_gravity="top|center" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/icon5"
                        android:onClick="openCategory"
                        android:minHeight="100dp"
                        android:minWidth="100dp"
                        android:tag="Transport"
                        android:layout_margin="3dp"
                        android:layout_gravity="top|center" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/icon6"
                        android:onClick="openCategory"
                        android:minHeight="100dp"
                        android:minWidth="100dp"
                        android:tag="Food"
                        android:layout_margin="3dp"
                        android:layout_gravity="top|center" />

                    </TableRow>
                    <TableRow android:gravity="center">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/icon7"
                        android:onClick="openCategory"
                        android:minHeight="100dp"
                        android:minWidth="100dp"
                        android:tag="Sports"
                        android:layout_margin="3dp"
                        android:layout_gravity="top|center" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/icon8"
                        android:onClick="openCategory"
                        android:minHeight="100dp"
                        android:minWidth="100dp"
                        android:tag="Health"
                        android:layout_margin="3dp"
                        android:layout_gravity="top|center" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/icon9"
                        android:onClick="openCategory"
                        android:minHeight="100dp"
                        android:minWidth="100dp"
                        android:tag="Entertainment"
                        android:layout_margin="3dp"
                        android:layout_gravity="top|center" />

                    </TableRow>
                    <TableRow android:gravity="center">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/icon10"
                        android:onClick="openCategory"
                        android:minHeight="100dp"
                        android:minWidth="100dp"
                        android:tag="Pets"
                        android:layout_margin="3dp"
                        android:layout_gravity="top|center" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/icon11"
                        android:onClick="openCategory"
                        android:minHeight="100dp"
                        android:minWidth="100dp"
                        android:tag="Apartment"
                        android:layout_margin="3dp"
                        android:layout_gravity="top|center" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/icon12"
                        android:onClick="openCategory"
                        android:minHeight="100dp"
                        android:minWidth="100dp"
                        android:tag="Income"
                        android:layout_margin="3dp"
                        android:layout_gravity="top|center" />
                    </TableRow>
                </TableLayout>

        </RelativeLayout>

    </FrameLayout>

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#1a1c25"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

</android.support.v4.widget.DrawerLayout>