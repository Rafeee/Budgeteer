<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:fitsSystemWindows="true"
    android:id="@+id/drawer_layout"
    android:useDefaultMargins="true">

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/relativeLayout2">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Title"
                    android:textStyle="bold"
                    android:textSize="32dp"
                    android:text="Make a new entry"
                    android:gravity="left"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#c0c0c0"
                    android:layout_below="@+id/Title"
                    android:layout_alignParentStart="true"
                    android:id="@+id/view" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/view"
                    android:layout_alignParentStart="true">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageButton
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/icon1"
                            android:onClick="openCategory"
                            android:minHeight="50dp"
                            android:minWidth="50dp"
                            android:tag="Apartment"
                            android:cropToPadding="false"
                            android:longClickable="false"
                            android:layout_margin="5dp"
                            android:layout_gravity="top|center"
                            android:layout_weight="1"
                            android:padding="25dp"
                            android:scaleType="centerInside"
                            android:background="#fff3f3f3" />

                        <ImageButton
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/icon2"
                            android:onClick="openCategory"
                            android:minHeight="50dp"
                            android:minWidth="50dp"
                            android:tag="Clothes"
                            android:cropToPadding="false"
                            android:longClickable="false"
                            android:layout_margin="5dp"
                            android:layout_gravity="top|center"
                            android:layout_weight="1"
                            android:padding="25dp"
                            android:scaleType="centerInside"
                            android:background="#fff3f3f3" />

                        <ImageButton
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/icon3"
                            android:onClick="openCategory"
                            android:minHeight="50dp"
                            android:minWidth="50dp"
                            android:tag="Phone"
                            android:layout_margin="5dp"
                            android:layout_gravity="top|center"
                            android:layout_weight="1"
                            android:padding="25dp"
                            android:scaleType="centerInside"
                            android:background="#fff3f3f3"
                            android:longClickable="false" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageButton
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/icon4"
                            android:onClick="openCategory"
                            android:minHeight="50dp"
                            android:minWidth="50dp"
                            android:tag="Bill"
                            android:layout_margin="5dp"
                            android:layout_gravity="top|center"
                            android:layout_weight="1"
                            android:padding="25dp"
                            android:scaleType="centerInside"
                            android:background="#fff3f3f3" />

                        <ImageButton
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/icon5"
                            android:onClick="openCategory"
                            android:minHeight="50dp"
                            android:minWidth="50dp"
                            android:tag="Transport"
                            android:layout_margin="5dp"
                            android:layout_gravity="top|center"
                            android:layout_weight="1"
                            android:padding="25dp"
                            android:scaleType="centerInside"
                            android:background="#fff3f3f3" />

                        <ImageButton
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/icon6"
                            android:onClick="openCategory"
                            android:minHeight="50dp"
                            android:minWidth="50dp"
                            android:tag="Food"
                            android:layout_margin="5dp"
                            android:layout_gravity="top|center"
                            android:layout_weight="1"
                            android:padding="25dp"
                            android:scaleType="centerInside"
                            android:background="#fff3f3f3" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageButton
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/icon7"
                            android:onClick="openCategory"
                            android:minHeight="50dp"
                            android:minWidth="50dp"
                            android:tag="Sports"
                            android:layout_margin="5dp"
                            android:layout_gravity="top|center"
                            android:layout_weight="1"
                            android:padding="25dp"
                            android:scaleType="centerInside"
                            android:background="#fff3f3f3" />

                        <ImageButton
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/icon8"
                            android:onClick="openCategory"
                            android:minHeight="50dp"
                            android:minWidth="50dp"
                            android:tag="Health"
                            android:layout_margin="5dp"
                            android:layout_gravity="top|center"
                            android:layout_weight="1"
                            android:padding="25dp"
                            android:scaleType="centerInside"
                            android:background="#fff3f3f3" />

                        <ImageButton
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/icon9"
                            android:onClick="openCategory"
                            android:minHeight="50dp"
                            android:minWidth="50dp"
                            android:tag="Entertainment"
                            android:layout_margin="5dp"
                            android:layout_gravity="top|center"
                            android:layout_weight="1"
                            android:padding="25dp"
                            android:scaleType="centerInside"
                            android:background="#fff3f3f3" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageButton
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/icon10"
                            android:onClick="openCategory"
                            android:minHeight="50dp"
                            android:minWidth="50dp"
                            android:tag="Pet"
                            android:layout_margin="5dp"
                            android:layout_gravity="top|center"
                            android:layout_weight="1"
                            android:padding="25dp"
                            android:scaleType="centerInside"
                            android:background="#fff3f3f3" />

                        <ImageButton
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/icon11"
                            android:onClick="openCategory"
                            android:minHeight="50dp"
                            android:minWidth="50dp"
                            android:tag="Car"
                            android:layout_margin="5dp"
                            android:layout_gravity="top|center"
                            android:layout_weight="1"
                            android:padding="25dp"
                            android:scaleType="centerInside"
                            android:background="#fff3f3f3" />

                        <ImageButton
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/icon12"
                            android:onClick="openCategory"
                            android:minHeight="50dp"
                            android:minWidth="50dp"
                            android:tag="Income"
                            android:layout_margin="5dp"
                            android:layout_gravity="top|center"
                            android:layout_weight="1"
                            android:padding="25dp"
                            android:scaleType="centerInside"
                            android:background="#fff3f3f3" />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>


    </FrameLayout>
    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#1a1c25"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

</android.support.v4.widget.DrawerLayout>